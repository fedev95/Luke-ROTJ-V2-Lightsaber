---
import DarkGrenade from "./DarkGrenade.astro";

const grips: string[] = ['', '', '', '', '', '', '', '', ''];
---

<div class="grenade-container">
  <div class="grenade bg-dark-gradient grenade-top grenade-5">
    <div class="grenade-top-l bg-dark"></div>
    <div class="grenade-top-r bg-dark"></div>
  </div>
  {
    grips.map((grip) => (
      <div class="grenade bg-steel grenade-3"></div>
      <div class="grenade grenade-5">
        <DarkGrenade></DarkGrenade>
      </div>
    ))
  }
  <div class="grenade bg-steel grenade-6">
    <div class="img-bg waves-1">
      <div class="img-bg teeth-texture"></div>
    </div>
  </div>
  <div class="grenade bg-steel grenade-base grenade-4">
    <div></div>
  </div>
</div>

<style>
  .grenade-container {
    align-items: center;
    display: flex;
    flex-direction: column;
    height: 30.96%;
    width: 100%;
  }
  
  .grenade {
    width: 67.92%;
  }

  .grenade-top {
    display: flex;
    justify-content: space-between;
    width: 54.5%;
  }

  .grenade-top-l {
    height: 100%;
    transform: skew(-35deg);
    translate: -40%;
    width: 15%;
  }
  
  .grenade-top-r {
    height: 100%;
    transform: skew(35deg);
    translate: 40%;
    width: 15%;
  }

  .grenade-3 {
    height: 3.45%;
  }

  .grenade-4 {
    height: 4.6%;
  }
  
  .grenade-5 {
    height: 5.75%;
  }

  .grenade-6 {
    height: 6.9%;
  }

  .grenade-base {
    align-items: end;
    display: flex;
    width: 71.7%;

    div {
      background-color: rgb(116, 116, 116);
      height: 1px;
      width: 100%;
    }
  }
</style>
