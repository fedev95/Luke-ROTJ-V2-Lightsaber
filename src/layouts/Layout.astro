---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <meta property="og:title" content={title}>
    <meta property="og:description" content="Lightsaber built with HTML and CSS.">
    <meta property="og:image" content="https://raw.githubusercontent.com/fedev95/Luke-ROTJ-V2-Lightsaber/main/images/screenshot-2.png">
    <meta property="og:url" content="https://luke-rotj-v2-lightsaber.netlify.app">
    <meta property="og:type" content="website">
	</head>
	<body>
    <div class="bg-gradient"></div>
		<slot />
	</body>
</html>

<script>
  import "../scripts/app.ts";
</script>

<style is:global>
	* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  :root {
    --steel: linear-gradient(90deg, rgb(128, 128, 128) 0%, rgba(66,66,66) 14%, rgba(70,70,70) 26%, rgba(74,74,74) 35%, rgba(112,112,112) 57%, rgba(230,230,230) 79%, rgba(118,118,119) 87%, rgba(61,61,61) 100%);
    --dark : rgb(22, 13, 13);
    --dark-gradient: linear-gradient(90deg, rgb(22, 13, 13) 0%, rgb(26, 22, 20) 30%, rgb(46, 42, 42) 57%, rgb(26, 22, 20) 80%, rgb(22, 13, 13) 100%);
  }

  body {
    background: lightblue;
    transition-duration: 0.3s;
    height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .bg-gradient {
    position: absolute;
    height: 100%;
    width: 100%;
    background: radial-gradient(circle, rgba(255,255,255,0) 0%, rgba(0,0,0,0.8) 100%);
  }

  .bg-steel {
    background: var(--steel);
  }

  .bg-dark {
    background: var(--dark);
  }

  .bg-dark-gradient {
    background: var(--dark-gradient);
  }

  .img-bg {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    height: 100%;
    width: 100%;
  }

  .mirror-x {
    transform: scaleX(-1);
    -webkit-transform: scaleX(-1);
  }

  .mirror-y {
    transform: scaleY(-1);
    -webkit-transform: scaleY(-1);
  }

  .mix-texture {
    background-image: url(mix-texture.svg);
  }

  .teeth-texture {
    background-image: url(teeth-texture.svg);
  }

  .waves-1 {
    background-image: url(waves-1.svg);
  }

  .waves-2 {
    background-image: url(waves-2.svg);
  }
</style>