---
import Footer from '../components/Footer.astro';
import Hilt from '../components/Hilt.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Luke ROTJ V2 Lightsaber">
	<main>
    <div id="lightsaber-container">
      <Hilt></Hilt>
    </div>
	</main>
  <Footer></Footer>
</Layout>

<style>
  #lightsaber-container {
    display: flex;
    justify-content: end;
    flex-direction: column;
    height: 75vh;
  }

  main {
    align-items: center;
    flex-grow: 1;
    display: flex;
    justify-content: center;
    overflow: hidden;
  }

  @media (min-width: 630px) {
    #lightsaber-container {
      height: 80vw;
      rotate: 90deg;
    }
  }
</style>
